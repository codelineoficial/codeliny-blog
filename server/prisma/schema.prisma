generator client {
	provider = "prisma-client-js"
}

datasource db {
	provider = "mongodb"
	url      = env("DATABASE_URL")
}

model Post {
	id        String   @id @default(auto()) @map("_id") @db.ObjectId
	title     String
	slug      String   @unique
	status    String
	author    String
	date      String
	views     String?
	likes     Int?     @default(0)
	category  String
	excerpt   String?
	image     String?
	tags      String?
	content   String?
	readTime  String?
	featured  Boolean?
	createdAt DateTime  @default(now())
}

model Contato {
	id        String   @id @default(auto()) @map("_id") @db.ObjectId
	name      String
	email     String
	phone     String?
	company   String?
	service   String?
	budget    String?
	message   String
	createdAt DateTime @default(now())
}

model Newsletter {
	id        String   @id @default(auto()) @map("_id") @db.ObjectId
	email     String   @unique
	createdAt DateTime @default(now())
}
